{
  "name": "@chaos-garden/workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for Chaos Garden simulation",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev -e dev --config wrangler.local.jsonc --persist-to .wrangler/local-state",
    "backend": "npm run dev",
    "frontend": "echo 'ðŸŽ¨ Workers: This script should be run from the root workspace' && exit 0",
    "deploy": "wrangler deploy",
    "db:init:local": "node scripts/init-local-db.js",
    "db:init:local:verify": "node scripts/init-local-db.js --verify-only",
    "db:init:remote": "node scripts/init-remote-db-prod.js",
    "db:init:remote:verify": "node scripts/init-remote-db-prod.js --verify-only",
    "test": "vitest run tests/unit",
    "test:watch": "vitest tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run tests/unit tests/integration --coverage",
    "test:ci": "npm run type-check && npm run test:coverage",
    "tail": "wrangler tail -e dev",
    "clean": "echo 'ðŸ§¹ Workers: No build artifacts to clean'",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@chaos-garden/shared": "file:../shared",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@types/node": "^25.2.1",
    "miniflare": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.63.0"
  }
}
