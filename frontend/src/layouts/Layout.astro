---
// Layout Component Props
interface Props {
  title?: string;
}

const { title = 'Chaos Garden' } = Astro.props;
---

<!--
  Main Layout Component
  Provides the base HTML structure for all pages in Chaos Garden.
  Includes global styles, fonts, and common scripts.
-->

<!doctype html>
<html lang="en" class="bg-garden-brown-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Chaos Garden: A living digital ecosystem that evolves while you watch." />
    
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Tailwind CSS -->
    <style>
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #fdf8f6;
      }
      ::-webkit-scrollbar-thumb {
        background: #e0cec7;
        border-radius: 5px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #d2bab0;
      }
      
      /* Selection color */
      ::selection {
        background-color: rgba(34, 197, 94, 0.3);
        color: #166534;
      }
    </style>
  </head>
  
  <body class="min-h-screen bg-gradient-to-br from-garden-brown-50 via-garden-green-50 to-garden-blue-50 font-sans text-gray-800">
    <!-- Main container -->
    <div class="min-h-screen flex flex-col">
      <!-- Header -->
      <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-sm border-b border-garden-brown-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div class="flex items-center justify-between">
            <!-- Logo and title -->
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 rounded-full bg-gradient-to-br from-garden-green-400 to-garden-green-600 flex items-center justify-center">
                <span class="text-white text-xl">ðŸŒ¿</span>
              </div>
              <div>
                <h1 class="text-2xl font-bold text-garden-green-900">
                  Chaos Garden
                </h1>
                <p class="text-sm text-garden-brown-600 font-mono">
                  A living digital ecosystem
                </p>
              </div>
            </div>
            
            <!-- Navigation -->
            <nav class="hidden md:flex items-center space-x-6">
              <a href="/" class="text-garden-brown-700 hover:text-garden-green-600 font-medium transition-colors">
                Garden
              </a>
              <a href="#" class="text-garden-brown-700 hover:text-garden-green-600 font-medium transition-colors">
                Stats
              </a>
              <a href="#" class="text-garden-brown-700 hover:text-garden-green-600 font-medium transition-colors">
                Events
              </a>
              <a href="#" class="text-garden-brown-700 hover:text-garden-green-600 font-medium transition-colors">
                Guide
              </a>
            </nav>
            
            <!-- Status indicator -->
            <div class="flex items-center space-x-3">
              <div 
                id="header-status"
                class="hidden sm:flex items-center space-x-2 px-3 py-1.5 bg-gray-100 rounded-full transition-colors duration-500"
              >
                <div id="header-status-dot" class="w-2 h-2 rounded-full bg-gray-400"></div>
                <span id="header-status-text" class="text-sm font-medium text-gray-600">Connecting...</span>
              </div>
            </div>
          </div>
        </div>
      </header>
      
      <!-- Main content -->
      <main class="flex-1">
        <slot />
      </main>
      
      <!-- Footer -->
      <footer class="bg-white/60 border-t border-garden-brown-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
          <div class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0">
            <div class="text-center md:text-left">
              <p class="text-garden-brown-600 font-medium">
                Chaos Garden v1.0.0
              </p>
              <p class="text-sm text-garden-brown-500">
                A passion project teaching backend development through emergent systems
              </p>
            </div>
            
            <div class="flex items-center space-x-4">
              <a href="#" class="text-garden-brown-500 hover:text-garden-green-600 transition-colors text-sm">
                GitHub
              </a>
              <a href="#" class="text-garden-brown-500 hover:text-garden-green-600 transition-colors text-sm">
                Documentation
              </a>
              <a href="#" class="text-garden-brown-500 hover:text-garden-green-600 transition-colors text-sm">
                API Reference
              </a>
            </div>
          </div>
          
          <div class="mt-6 pt-6 border-t border-garden-brown-200 text-center">
            <p class="text-xs text-garden-brown-400">
              ðŸŒ¿ This garden runs on Cloudflare's edge network and evolves every 15 minutes.
              Witness the emergence of life from simple rules.
            </p>
          </div>
        </div>
      </footer>
    </div>
    
    <!-- Global scripts (non-Astro) -->
    <script>
      // Initialize theme if needed
      if (typeof window !== 'undefined') {
        // Add any global initialization logic here
        console.log('ðŸŒ¿ Chaos Garden loaded');
      }
    </script>
  </body>
</html>