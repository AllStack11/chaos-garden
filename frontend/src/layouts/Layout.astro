---
// Layout Component Props
interface Props {
  title?: string;
}

const { title = 'Chaos Garden' } = Astro.props;
---

<!--
  Main Layout Component
  Provides the base HTML structure for all pages in Chaos Garden.
  Includes global styles, fonts, and common scripts.
-->

<!doctype html>
<html lang="en" class="bg-garden-brown-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Chaos Garden: A living digital ecosystem that evolves while you watch." />
    
    <title>{title}</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <!-- Favicon (SVG + cache-bust + fallbacks) -->
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg?v=2" />
    <link rel="shortcut icon" href="/favicon.svg?v=2" />
    
    <!-- Tailwind CSS -->
    <style>
      /* Custom scrollbar */
      ::-webkit-scrollbar {
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #fdf8f6;
      }
      ::-webkit-scrollbar-thumb {
        background: #e0cec7;
        border-radius: 5px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #d2bab0;
      }
      
      /* Selection color */
      ::selection {
        background-color: rgba(34, 197, 94, 0.3);
        color: #166534;
      }
    </style>
  </head>
  
  <body class="overflow-hidden bg-[#0a140a] font-sans text-gray-100 antialiased selection:bg-garden-green-500/30 selection:text-white">
    <!-- Main container -->
    <div class="relative h-screen w-screen overflow-hidden">
      <!-- Ambient Noise Overlay -->
      <div class="pointer-events-none fixed inset-0 z-[9999] opacity-[0.04] mix-blend-overlay bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>
      
      <!-- Background Atmosphere (Lush Forest) -->
      <div class="fixed inset-0 z-0 bg-gradient-to-tr from-[#0a1a0a] via-[#0f1f0f] to-[#1a140f]"></div>
      
      <!-- Subtle Vignette -->
      <div class="pointer-events-none fixed inset-0 z-[5] bg-[radial-gradient(circle_at_center,transparent_0%,rgba(0,0,0,0.4)_100%)]"></div>

      <!-- Main content -->
      <main class="relative z-10 h-full w-full">
        <slot />
      </main>
    </div>
    
    <!-- Global scripts (non-Astro) -->
    <script>
      // Initialize theme if needed
      if (typeof window !== 'undefined') {
        // Add any global initialization logic here
        console.log('ðŸŒ¿ Chaos Garden loaded');
      }
    </script>
  </body>
</html>
